<%- include("header") %>
<div class="box" id="heading">
    <h1> <%= listItem %> </h1>
</div>

<div class="box">
    <form action="/delete" method="post">
        <% newListItem.forEach(function(element) {  %>

        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= element._id  %>" onChange="this.form.submit()">
            <p><%= element.name %> </p>
        </div>
        <% }) %>
        <input type="hidden" name="listName" value="<%= listItem %>">
    </form>

    <form class="item" action="/" method="post">
        <input type="text" name="newList" placeholder="New Item" autocomplete="off">
        <button type="submit" name='list' value=<%=listItem%>>+</button>
    </form>
</div>

<%- include("footer") %>